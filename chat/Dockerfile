FROM golang:1.25-alpine3.22 AS builder 
WORKDIR /app 
COPY go.mod go.sum /app/ 
RUN go mod download  
COPY . /app/ 
RUN GOOS=linux GOARCH=amd64 CGO_ENABLED=0 go build -o chat_server ./cmd/chat_server/main.go 

FROM alpine:3.22.1 
WORKDIR /app 
COPY --from=builder /app/chat_server /app/  
CMD ["./chat_server"] 





